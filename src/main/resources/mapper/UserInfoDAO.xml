<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.stusystem.lky.dao.UserInfoDAO">
<!-- 为dao接口方法配置sql语句 -->
	<select id="queryByName" resultType="UserInfo" parameterType="String">
		<!-- sql语句 -->
		SELECT 
		 user_id,
    	 user_name,
    	 user_password
		FROM 
		 userinfo
		WHERE
		 user_name=#{userName};
	</select>
	
	<select id="insertUser" resultType="int" parameterType="String">
		INSERT INTO userinfo (user_name,user_password) VALUES(#{userName},#{userPassword});
	</select>
</mapper>